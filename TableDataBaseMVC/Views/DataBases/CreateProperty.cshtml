@model AttributePropertyModel

@{
    ViewData["Title"] = "Add column";
    var attributeTypes = Html.GetEnumSelectList<AttributeType>().Where(x => x.Value != ((int)AttributeType.Relation).ToString());
}

<h1>@ViewData["Title"]</h1>
<hr />
<div class="btn-group btn-group-sm" role="group">
    <input type="submit" form="createForm" value="Create" class="btn btn-outline-dark" />
    <a class="btn btn-outline-dark" asp-action="EditTable" asp-route-guid="@ViewData["TableGuid"]" asp-route-dbguid="@ViewData["DbGuid"]">Back</a>
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateProperty" id="createForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DbGuid" value="@ViewData["DbGuid"]" />
            <input type="hidden" asp-for="TableGuid" value="@ViewData["TableGuid"]" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AttributeType" class="control-label"></label>
                <select asp-for="AttributeType" class="form-control" asp-items="attributeTypes"></select>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
